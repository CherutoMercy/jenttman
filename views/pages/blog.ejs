<% layout('pages/navlayout') -%>
<!--content-->
<div class="blog">
<div class="container">
	<h1>Blog</h1>
			  <div class="blog-top">
			   <% blog.forEach(function(blog, index){ %>
			  <div class="col-md-6 grid_3">
					<h3 class="center-align"><a href="/blog/item/<%= blog._id %>"><%= blog.title %></a></h3>
					<div class ="card">
					<a href="/blog/item/<%= blog._id %>"><img src="<%= blog.photo %>" align="middle" class="img-responsive" alt=""/></a>
				</div>
					<div class="blog-poast-info">
						<ul>
							<li><a class="admin" href="#"><i> </i> Admin </a></li>
							<li><span><i class="date"> </i>12 march 2016</span></li>
							<li><a class="p-blog" href="#"><i class="comment"> </i>No Comments</a></li>
						</ul>
				    </div>
					<p><%= blog.content %></p>
					<div class="button"><a href="/blog/item/<%= blog._id %>">Read More</a></div>
				</div>

				<%});%>
				</div>
				<div class="clearfix"> </div>
		</div>
  </div>
<!--//content-->
