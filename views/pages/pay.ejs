<% layout('pages/indexlayout') -%>
<!--content-->
<div class="container">
		<div class="account">
		<div class="account-pass">
<div class="col-md-8 account-top">
		<div class="col-md-12 account-top">
        <h2><b>BILLING DETAILS</b></h2>
			<form action="/login" method="post">
			<div>
				<span class="col-sm-2"><b>Full Name</b></span>
        <div class="col-sm-10">
				<input type="text" name="username" required="required">
			</div>
      </div>
			<div>
				<span class="col-sm-2"><b>Email</b></span>
        <div class="col-sm-10">
				<input type="text" name="email" required="required">
			</div>
      </div>
      <div>
        <span class="col-sm-2"><b>Phone Number</b></span>
        <div class="col-sm-10">
        <input type="text" name="phonenumber" required="required">
      </div>
      </div>
      <div>
        <span class="col-sm-2"><b>Location</b></span>
        <div class="col-sm-10">
        <input type="text" name="location" required="required">
      </div>
      </div>
      <div>
        <span class="col-sm-2"><b>Postal Address</b></span>
        <div class="col-sm-10">
        <input type="text" name="address" required="required">
      </div>
      </div>
			</form>
		</div>

      <div class="col-md-12 account-top">
      <h2><b>Paypal Checkout</b></h2>
        <form action="/paynow" method="post" >
        <span class="col-sm-2">Amount :</span>
        <div class="col-sm-10">
          <input type="text" name="amount" placeholder="Enter Amount" required="required" value="<%= totalPrice %>">
        </div>

        <span class="col-sm-2">Currency</span>
        <div class="col-sm-10">
          <input type="text" name="currency" placeholder="Enter Currency Type" value="USD" required="required">
        </div>

           <input type="submit" class="btn large button success right" value="Pay Now">

    </form></br>
          <a class="btn btn-success" href="#">Mpesa checkout</a>
      </div>

<div class = "row">

</div>

	<div class="clearfix"> </div>
</div>
</div>
</div>
<!--//content-->
