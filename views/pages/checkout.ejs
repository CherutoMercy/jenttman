<% layout('pages/navlayout') -%>
<div class="container">
	<div class="check">
     <h1>My Shopping Bag (2)</h1>
   <div class="col-md-9 cart-items">


<% if(products){%>
<% products.forEach(function(product){ %>
<div class='cart-header'>
  <div class='cart-sec simpleCart_shelfItem'>
    <div class='cart-item cyc'>
      <img src='<%= product.fashionphoto %>' class='img-responsive' alt=''/>
    </div>
    <div class='cart-item-info'>
      <h3>
        <a href='#'><%= product.fashionname %></a>
        <span>Model No: 3578</span>
      </h3>
      <ul class='qty'>
        <li>
          <p style="font-size:13px;">Size : <%= product.size %></p>
        </li>
        <li><p>Quantity :<%= product.qty %>
          </p>
        </li>
      </ul>
      <div class='delivery'>
        <p>Price Charges : <span class='price'><%= product.price %></span></p>
        <span>Delivered in 2-3 bussiness days</span>
        <div class='clearfix'>
        </div>
        <div class="btn-group">
          <a class="continue btn" href="/add-qty-to-cart/<%= product.sizeid %>">Add one Item</a>
          <a class="continue btn" href="/remove-from-cart/<%= product.sizeid %>">Remove one Item</a>
          <a class="continue btn" href="/remove-object/<%= product.sizeid %>">Remove all</a>
        </div>
      </div>
    </div>
    <div class='clearfix'>
    </div>
  </div>
</div>
<% });
        }else{%>
        <h2>No items in cart yet</h2>
        <% } %>
		 </div>
		  <div class="col-md-3 cart-total">
			 <div class="price-details">
				 <h3>Price Details</h3>
				 <span>Total</span>
				 <span class="total1"><%= totalPrice %></span>
				 <span>Discount</span>
				 <span class="total1">---</span>
				 <span>Delivery Charges</span>
				 <span class="total1">Free(0.00)</span>
				 <div class="clearfix"></div>
			 </div>
			 <ul class="total_price">
			   <li class="last_price"> <h4>TOTAL</h4></li>
         <li class="last_price"><span><%= totalPrice %></span></li>
			   <div class="clearfix"> </div>
			 </ul>


			 <div class="clearfix"></div>
			 <a class="order" href="/pay/:id">Place Order</a>
			 <div class="total-item">
				 <h3>OPTIONS</h3>
				 <h4>COUPONS</h4>
				 <a class="cpns" href="/orders/post">Apply Coupons</a>
				 <p><a href="#">Log In</a> to use accounts - linked coupons</p>
			 </div>
			</div>

			<div class="clearfix"> </div>
	 </div>
	 </div>
